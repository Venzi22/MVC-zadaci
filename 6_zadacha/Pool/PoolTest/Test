using Pool.Model;
using Pool.Controler;
using Pool.Service;
using Pool.View;
namespace PoolTest
{
    public class Tests
    {
        [Test]
        public void Test()
        {
            PoolModel model = new PoolModel(666, 30, 22, 3);
            PoolService service = new PoolService();
            PoolControler controller = new PoolControler(service);
            var result = controller.GetOutput(model);

            Assert.That(result, Is.EqualTo("The pool is 23.423423423423422% full. Pipe 1: 57.69%. Pipe 2: 42.31%."));
        }
    }
}
