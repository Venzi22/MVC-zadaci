using Plochki.Model;
using Plochki.Controler;
using Plochki.Service;
namespace TestNaPlochki
{
    public class Tests
    {
        [Test]
        public void Test()
        {
            PlochkiModel model = new PlochkiModel(4, 0.5, 0.5, 1, 1, 0, 0);
            PlochkiService service = new PlochkiService();
            PlochkiControler controler = new PlochkiControler(service);
            controler.Cal(model);

            Assert.That(model.TimeNeeded, Is.EqualTo(12));
        }
    }
}
