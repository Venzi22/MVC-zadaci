using Division.Model;
using Division.Service;
using Division.Controler;
using Division.View;
namespace DivisionTest
{
    public class Tests
    {
        [Test]
        public void Test()
        {
            DivisionModel model = new DivisionModel(4, 0, 0, 0, new int[] { 111, 222, 333, 4444 });
            DivisionService service = new DivisionService();
            DivisionControler controler = new DivisionControler(service);
            controler.Cal(model);
            controler.CalPrc(model);

            Assert.That(model.P3,Is.EqualTo(25));
        }
    }
}
