using Adventure.Controler;
using Adventure.Service;
using Adventure.Model;
namespace AdventureTest
{
    public class TestServiceAndControllerPickDestination
    {
        [Test]
        public void Test()
        {
            AdventureModel model = new AdventureModel(50, "summer");
            AdventureService service = new AdventureService();
            AdventureConroler controller = new AdventureConroler(service);
            controller.AdveturePickDestination(model);

            Assert.AreEqual("Bulgaria", model.Place);
        }
    }
}
